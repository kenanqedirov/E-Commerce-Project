@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/Index.cshtml";
    int count =0;
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Feature Name</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model is not null)
                            {
                                @foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.Title</td>
                                        <td><a href="/Admin/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Delete</a></td>
                                        <td><a href="/Admin/Feature/UpdateFeature/@item.FeatureId" class="btn btn-success">Update</a></td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <h3>You have not a data</h3>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Feature/CreateFeature/" class="btn btn-primary">Add new Feature</a>

                </div>
            </div>
        </div>
    </div>
</section>
