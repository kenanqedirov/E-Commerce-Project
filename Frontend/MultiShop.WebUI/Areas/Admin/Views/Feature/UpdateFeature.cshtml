@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout/Index.cshtml";
}

<h1>UpdateFeature</h1>

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="FeatureId" class="form-control" /><br />
                        <label>Feature Title</label>
                        <input type="text" asp-for="Title" class="form-control" /><br />
                        <label>Feature Icon</label>
                        <input type="text" asp-for="Icon" class="form-control" /><br />
                        <button class="btn btn-primary">Update Feature</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>